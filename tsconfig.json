{
  "compilerOptions": {
     "target": "esnext",
     "module": "commonjs",
     "rootDir": "src",
     "outDir": "build",
     "strict": true,
     "moduleResolution": "node",
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "baseUrl": "./",
     "paths": {
        "src/*": ["./src/*"]
     },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}